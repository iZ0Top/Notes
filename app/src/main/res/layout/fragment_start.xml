<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.FragmentStart">

    <TextView
        android:id="@+id/tv_text_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which the database uses?"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_firebase"/>
    <Button
        android:id="@+id/btn_firebase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="FireBase"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_text_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_room"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/btn_room"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ROOM"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_text_label"
        app:layout_constraintStart_toEndOf="@id/btn_firebase"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />













</androidx.constraintlayout.widget.ConstraintLayout>